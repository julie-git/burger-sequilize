<div class = "wrapper">
<h1>Eat- Da -Burger!</h1>


<div class = "container">

<div class = "noteaten">
<h2>Burgers not Eaten!</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class = "devoured">
<h2>Burgers Devoured!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>


<h2>Add a Burger</h2>
<div class = "addburger">
<form class="create-form">

  <div class="form-group">
    <label for="burg">New Burger Name:</label>
    <input type="text" id="burg" name="burger_name">
  </div>
 

  <button type="submit">Add Burger</button>
</form>
</div>
